# OpenManus AI Platform Configuration
# Copy this file to .env and update the values

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
HTTPS=false

# Database Configuration
DATABASE_URL=postgresql://openmanus:openmanus123@localhost:5432/openmanus
DB_PASSWORD=openmanus123

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=redis123

# Basic Monitoring
LOG_LEVEL=INFO
LOG_FILE=logs/openmanus.log

# API Keys (for external services)
OPENAI_API_KEY=your-openai-api-key
GOOGLE_API_KEY=your-google-api-key

# WebSocket Configuration
WS_PING_TIMEOUT=60
WS_PING_INTERVAL=25

# File Upload Limits
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
UPLOAD_FOLDER=uploads
WORKSPACE_FOLDER=workspace



# Development Settings
FLASK_ENV=production
FLASK_DEBUG=false

# Admin Panel
ADMIN_EMAIL=admin@openmanus.ai
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123  # Change this!

# Monitoring Services (optional)
GRAFANA_PASSWORD=admin123
PROMETHEUS_RETENTION=200h

# SSL/TLS (for production)
SSL_CERT_PATH=/etc/ssl/certs/openmanus.crt
SSL_KEY_PATH=/etc/ssl/private/openmanus.key

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100  # requests per hour per IP

# CORS Settings
CORS_ORIGINS=*  # Set to specific domains in production

# Session Configuration
SESSION_TIMEOUT=86400  # 24 hours in seconds
SESSION_CLEANUP_INTERVAL=3600  # 1 hour

# Docker Configuration
CONTAINER_NAME=openmanus-ai
NETWORK_NAME=openmanus-network

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400  # 24 hours
BACKUP_RETENTION_DAYS=30

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@openmanus.ai